{
  "name": "npm-preact-boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf dist/* && mkdir -p dist",
    "build": "npm-run-all --parallel build:*",
    "build:css": "node-sass src/index.scss | postcss -c .postcssrc.json | cssmin > dist/bundle.min.css",
    "build:html": "cp src/index.html dist/index.html",
    "build:js": "browserify src/client/index.js -t babelify --debug | exorcist dist/bundle.min.js.map > dist/bundle.min.js",
    "watch": "npm run build && npm-run-all --parallel watch:*",
    "watch:css": "onchange 'src/**/*.scss' -- npm run build:css",
    "watch:html": "onchange 'src/**/*.html' -- npm run build:html",
    "watch:js": "onchange 'src/**/*.js' -- npm run build:js",
    "serve": "npm-run-all --parallel watch serve:dev",
    "serve:dev": "browser-sync start -s 'dist' -f 'dist' --port 1337 --no-open --reload-debounce 500",
    "start": "npm run serve"
  },
  "engines": {
    "node": "6.10.0"
  },
  "keywords": [],
  "author": "Felix DÃ¼rrwald <fduerrwald@salesforce.com>",
  "license": "MIT",
  "dependencies": {
    "express": "4.15.2",
    "morgan": "1.8.1",
    "preact": "7.2.1",
    "preact-redux": "2.0.1",
    "redux": "3.6.0"
  },
  "devDependencies": {
    "babel-cli": "6.24.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "body-parser": "1.17.1",
    "bootstrap-sass": "3.3.7",
    "browser-sync": "^2.18.8",
    "browserify": "^14.1.0",
    "cssmin": "^0.4.3",
    "dotenv": "4.0.0",
    "exorcist": "^0.4.0",
    "morgan": "1.8.1",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^9.1.0",
    "postcss-nested": "^1.0.0"
  }
}
