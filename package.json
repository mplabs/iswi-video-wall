{
  "name": "npm-preact-boilerplate",
  "version": "0.0.1",
  "description": "",
  "repository": "git@github.com:mplabs/npm-preact-boilerplate.git",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf dist/* && mkdir -p dist/{client,server}",
    "build": "npm-run-all --parallel build:*",
    "build:css": "node-sass --include-path node_modules/foundation-sites/scss src/client/index.scss | postcss -c .postcssrc.json | cssmin > dist/client/bundle.min.css",
    "build:html": "cp src/client/index.html dist/client/index.html",
    "build:assets": "cp -r src/client/assets dist/client/assets",
    "build:js": "browserify src/client/index.js -t babelify --debug | exorcist dist/client/bundle.min.js.map > dist/client/bundle.min.js",
    "build:server": "babel src/server --out-dir dist/server --source-maps",
    "watch": "npm run build && npm-run-all --parallel watch:*",
    "watch:css": "onchange 'src/client/**/*.scss' -- npm run build:css",
    "watch:html": "onchange 'src/client/**/*.html' -- npm run build:html && npm run build:assets",
    "watch:js": "onchange 'src/**/*.js' -- npm run build:js",
    "watch:server": "onchange 'src/server/**/*' -- npm run build:server",
    "api": "npm run api:prod",
    "api:prod": "ENV=production node dist/server/index.js",
    "api:dev": "ENV=development babel-node -w 'src/server' src/server/index.js",
    "web": "npm run web:prod",
    "web:prod": "ENV=production PORT=1337 node dist/server/index.js",
    "web:dev": "ENV=development PORT=1338 node dist/server/index.js",
    "browsersync": "browser-sync start --proxy 'localhost:1338' --files 'dist/client' --port 1337 --no-open",
    "start:prod": "npm run build && npm run web",
    "start:dev": "npm run build && npm-run-all --parallel watch browsersync web:dev",
    "start": "npm run start:prod"
  },
  "engines": {
    "node": "6.10.0"
  },
  "keywords": [],
  "author": "Felix DÃ¼rrwald <fduerrwald@salesforce.com>",
  "license": "MIT",
  "dependencies": {
    "express": "4.15.2",
    "foundation-sites": "^6.3.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "morgan": "1.8.1",
    "preact": "7.2.1",
    "preact-redux": "2.0.1",
    "preact-router": "^2.5.2",
    "redux": "3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "babel-cli": "6.24.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "body-parser": "1.17.1",
    "bootstrap-sass": "3.3.7",
    "browser-sync": "^2.18.8",
    "browserify": "^14.1.0",
    "cssmin": "^0.4.3",
    "cssnano": "3.10.0",
    "dotenv": "^4.0.0",
    "exorcist": "^0.4.0",
    "morgan": "1.8.1",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^9.1.0",
    "postcss-nested": "^1.0.0"
  }
}
